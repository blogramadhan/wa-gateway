{
  "name": "wa-gateway",
  "version": "1.0.0",
  "description": "WhatsApp Gateway menggunakan Bun.js dan whatsapp-web.js",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "docker:build": "docker build -t wa-gateway .",
    "docker:run": "docker run -p 5000:5000 --name wa-gateway-container wa-gateway",
    "docker:stop": "docker stop wa-gateway-container",
    "docker:remove": "docker rm wa-gateway-container",
    "docker:logs": "docker logs -f wa-gateway-container",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:restart": "docker-compose restart",
    "compose:build": "docker-compose build --no-cache",
    "compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "compose:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "compose:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "keywords": ["whatsapp", "gateway", "api", "bun", "typescript"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/qrcode-terminal": "^0.12.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  }
}
